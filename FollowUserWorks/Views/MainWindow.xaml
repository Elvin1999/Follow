<Window x:Class="FollowUserWorks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FollowUserWorks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">

        <StackPanel Orientation="Horizontal" Margin="100,50">
            <Button Width="150" Height="30" Background="Aqua" Content="Configuration" FontSize="18" Margin="40,0,0,0"></Button>
            <Button Width="150" Height="30" Background="Aqua" Command="{Binding CurrentProcessCommand}"  Content="Current Processes" FontSize="18" Margin="10,0,0,0" ></Button>
            <Button Width="150" Height="30" Background="Aqua" Command="{Binding LoggedProcessCommand}" Content="Logged Process" FontSize="18" Margin="10,0,0,0"></Button>
        </StackPanel>
        
    </Grid>
</Window>
